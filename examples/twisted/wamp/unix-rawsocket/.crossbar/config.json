
{
    "controller": {
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "publish": true,
                                    "subscribe": true,
                                    "call": true,
                                    "register": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": ".."
                        },
                        "ws": {
                            "type": "websocket"
                        }
                    }
                },
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "unix",
                        "path": "/tmp/cb-raw"
                    }
                },
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "unix",
                        "path": "/tmp/cb-web"
                    }
                },
                {
                    "type": "websocket",
                    "id": "tls_test0",
                    "endpoint": {
                        "type": "tcp",
                        "port": 9983,
                        "tls": {
                            "key": "../../pubsub/tls/server.key",
                            "certificate": "../../pubsub/tls/server.crt"
                        }
                    }
                }
            ]
        }
    ]
}
