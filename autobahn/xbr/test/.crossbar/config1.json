{
   "version": 2,
   "controller": {
      "id": "node1"
   },
   "workers": [
      {
         "id": "router1",
         "type": "router",
         "options": {
            "pythonpath": [".."]
         },
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "public.",
                           "match": "prefix",
                           "allow": {
                              "call": true,
                              "register": false,
                              "publish": false,
                              "subscribe": true
                           },
                           "disclose": {
                              "caller": true,
                              "publisher": false
                           },
                           "cache": true
                        }
                     ]
                  },
                  {
                     "name": "user",
                     "permissions": [
                        {
                           "uri": "user.",
                           "match": "prefix",
                           "allow": {
                              "call": true,
                              "register": true,
                              "publish": true,
                              "subscribe": true
                           },
                           "disclose": {
                              "caller": true,
                              "publisher": true
                           },
                           "cache": true
                        },
                        {
                           "uri": "",
                           "match": "prefix",
                           "allow": {
                              "call": true,
                              "register": false,
                              "publish": false,
                              "subscribe": true
                           },
                           "disclose": {
                              "caller": true,
                              "publisher": false
                           },
                           "cache": true
                        }
                     ]
                  },
                  {
                     "name": "backend",
                     "permissions": [
                        {
                           "uri": "",
                           "match": "prefix",
                           "allow": {
                              "call": false,
                              "register": true,
                              "publish": true,
                              "subscribe": false
                           },
                           "disclose": {
                              "caller": false,
                              "publisher": false
                           },
                           "cache": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
               "serializers": ["cbor", "json"],
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "auth": {
                  "cryptosign": {
                     "type": "dynamic",
                     "authenticator": "com.example.authenticate",
                     "authenticator-realm": "realm1"
                  }
               }
            }
         ],
         "components": [
            {
               "type": "class",
               "classname": "_authenticator.Authenticator",
               "realm": "realm1",
               "role": "backend"
            },
            {
               "type": "class",
               "classname": "_backend.Backend",
               "realm": "realm1",
               "role": "backend"
            }
         ]
      }
   ]
}
